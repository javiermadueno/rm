
<h4 class="widgettitle">{{ "datos" |trans }}</h4>
<div class="mediamgr_head">
    <table class="margin-center">
        <tbody>
        <tr>
            <td class="sinborde" width="20%">{{ "nombre" | trans }}: </td>
            <td class="sinborde">&nbsp;</td>
            <td class="sinborde">{{ form_widget(form.nombre) }}</td>
        </tr>
        <tr>
            <td class="sinborde">{{ "tipo" |trans|title}}</td>
            <td class="sinborde">&nbsp;</td>
            <td class="sinborde">{{ form_widget(form.tipo) }}</td>
        </tr>
        <tr>
            <td class="sinborde">{{ "numero.slots" | trans }}: </td>
            <td class="sinborde">&nbsp;</td>
            <td class="sinborde">{{ form_widget(form.numSlots) }}</td>
        </tr>
        <tr>
            <td class="sinborde">{{ "tamano.slots" |trans|title}}</td>
            <td class="sinborde">&nbsp;</td>
            <td class="sinborde">{{ form_widget(form.idTamanyoSlot) }}</td>
        </tr>
        </tbody>
    </table>
</div>

<h4 class="widgettitle">{{ "grupo.slots.caracteristicas" |trans|title }}</h4>
<table class="table table-bordered responsive">
    <tbody>
    {% if form.mImgProducto is defined %}
    <tr>
        <td  width="1%">{{ form_widget(form.mImgProducto) }}</td>
        <td  colspan="2">
            {% if form.vars.value.tipo == constant('PROMOCION', form.vars.value) %}
                {{ "formulario.grupo.slot.m_img_producto" | trans }}
            {% else %}
                {{ "formulario.grupo.slot.m_img_creatividad" | trans }}
            {% endif %}
        </td>
    </tr>
    {% endif %}

    {% if form.mNombreProducto is defined %}
        <tr>
            <td width="1%">{{ form_widget(form.mNombreProducto) }}</td>
            <td>{{ 'formulario.grupo.slot.m_nombre_producto'|trans }}</td>
        </tr>
    {% endif %}

    {% if form.mPrecio is defined %}
    <tr>
        <td >{{ form_widget(form.mPrecio) }}</td>
        <td colspan="2">{{ "formulario.grupo.slot.m_precio_producto" | trans }}</td>
    </tr>
    {% endif %}

    {% if form.mVolumen is defined %}
    <tr>
        <td >{{ form_widget(form.mVolumen) }}</td>
        <td  colspan="2">{{ "formulario.grupo.slot.m_volumen" | trans }}</td>
    </tr>
    {% endif %}

    {% if form.mCondiciones is defined %}
    <tr>
        <td>{{ form_widget(form.mCondiciones) }}</td>
        <td colspan="2">{{ "formulario.grupo.slot.m_condiciones" | trans }}</td>
    </tr>
    {% endif %}


    {% if form.mTexto is defined %}
    <tr>
        <td>{{ form_widget(form.mTexto) }}</td>
        <td  colspan="2">{{ "formulario.grupo.slot.m_texto" | trans }}</td>
    </tr>
    {% endif %}

    {% if form.mVoucher is defined %}
    <tr>
        <td>{{ form_widget(form.mVoucher) }}</td>
        <td  colspan="2">{{ "formulario.grupo.slot.m_voucher" | trans }}</td>
    </tr>
    {% endif %}

    {% if form.mFidelizacion is defined %}
    <tr>
        <td>{{ form_widget(form.mFidelizacion) }}</td>
        <td  colspan="2">{{ "formulario.grupo.slot.m_fidelizacion" | trans }}</td>
    </tr>
    {% endif %}
    </tbody>
</table>