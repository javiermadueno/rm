<!-- Grupo de tipo Promocion -->
{% set slots = grupoSlots.slots %}
{% for slot in slots %}
    {% set id = 'slot-' ~ slot.idSlot %}
    <div class="movableContent">
        <table border="0" cellpadding="0" cellspacing="0" width="560">
            <tbody>
            <tr>
                <td height="25"></td>
            </tr>
            <tr>
                <td>
                    <table align="center" border="0" cellpadding="0" cellspacing="0" valign="top" width="560">
                        <tbody>
                        <tr>
                            <td valign="top" width="175">
                                <table align="left" bgcolor="#3c8ee8" border="0" cellpadding="0" cellspacing="0"
                                       valign="top" width="175">
                                    <tbody>
                                    <tr>
                                        <td colspan="3" height="18"></td>
                                    </tr>
                                    <tr>
                                        <td width="18">
                                        </td>
                                        <td width="139">
                                            {% if grupoSlots.mNombreProducto %}
                                                <div class="contentEditableContainer contentTextEditable">
                                                    <div class="contentEditable">

                                                        <h1 id="{{ id ~ '-nombreProducto' }}" class="white" style="color:#ffffff;font-size:21px;font-weight:normal;">
                                                            Marc Jacobs
                                                        </h1>

                                                    </div>
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td width="18"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" height="15"></td>
                                    </tr>
                                    <tr>
                                        <td width="18"></td>
                                        <td width="139">
                                            <div class="contentEditableContainer contentTextEditable">
                                                <div class="contentEditable">

                                                    {% if grupoSlots.mVolumen %}
                                                        <p  id="{{ id ~ '-volumen' }}" style="color:#ffffff;font-size:13px;line-height:19px;">
                                                            Volumen
                                                        </p>
                                                    {% endif %}

                                                    {% if grupoSlots.mCondiciones %}
                                                        <p  id="{{ id ~ '-condiciones' }}" style="color:#ffffff;font-size:13px;line-height:19px;">
                                                            Condiciones
                                                        </p>
                                                    {% endif %}

                                                    {% if grupoSlots.mTexto %}
                                                        <p  id="{{ id ~ '-texto' }}" style="color:#ffffff;font-size:13px;line-height:19px;">
                                                            Texto Libre
                                                        </p>
                                                    {% endif %}

                                                    {% if grupoSlots.mVoucher %}
                                                        <p  id="{{ id ~ '-voucher' }}" style="color:#ffffff;font-size:13px;line-height:19px;">
                                                            Voucher
                                                        </p>
                                                    {% endif %}

                                                </div>
                                            </div>
                                        </td>
                                        <td width="18"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" height="18"></td>
                                    </tr>
                                    <tr>
                                        <td bgcolor="#2D3867" colspan="3" height="18"></td>
                                    </tr>
                                    {% if grupoSlots.mPrecio %}
                                        <tr>
                                            <td bgcolor="#2D3867" width="18"></td>
                                            <td width="139" align="center" bgcolor="#2D3867">
                                                <div class="contentEditableContainer contentTextEditable">
                                                    <div class="contentEditable">
                                                        <a target="_blank" href="#" style="color: #ffffff; font-size: 30px; text-decoration: none;">
                                                            <strong id="{{ id ~ '-precio' }}">55,70â‚¬</strong>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td bgcolor="#2D3867" width="18"></td>
                                        </tr>
                                    {% endif %}

                                    <tr>
                                        <td bgcolor="#2D3867" colspan="3" height="18"></td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td width="18"></td>
                            <td class='bgItem' style="border:1px solid #dddddd;" valign="top" width="365">
                                {% if grupoSlots.mImgProducto %}
                                    <table align="center" border="0" cellpadding="0" cellspacing="0" valign="top" width="365">
                                        <tbody>
                                        <tr>
                                            <td colspan="3" height="15"></td>
                                        </tr>
                                        <tr>
                                            <td width="20"></td>
                                            <td width="325">
                                                <img id="{{ id ~ '-imagen' }}" src="{{ asset('bundles/rmplantilla/images/perfumeria/img1.png', absolute=true) }}" width="320" height="186" alt=""/>
                                            </td>
                                            <td width="20"></td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" height="15"></td>
                                        </tr>
                                        </tbody>
                                    </table>
                                {% endif %}

                            </td>
                        </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endfor %}
<!-- Fin de grupo tipo promocion -->