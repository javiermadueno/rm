<!-- Grupo tipo Creatividad -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="{{ color_background }}" align="center" style="padding: 70px 15px 70px 15px;"
            class="section-padding">
            <table width="{{ grupoSlots.idTamanyoImgProducto.ancho|default(500) }}" border="0" cellspacing="0"
                   cellpadding="0" class="responsive-table">
                <tr>
                    <td>
                        <!-- TITLE SECTION AND COPY -->
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td align="center"
                                    style="font-size: 25px; font-family: Helvetica, Arial, sans-serif; color: #333333;"
                                    class="padding-copy">{{ grupoSlots.nombre }}</td>
                            </tr>
                        </table>
                    </td>
                </tr>
                {% set slots = grupoSlots.slots %}
                {% for slot in slots %}
                    {% set id = grupoSlots.idGrupo ~ '-' ~ slot.idSlot %}
                    <tr id="{{ id }}">
                        <td width="{{ grupoSlots.idTamanyoImgProducto.ancho }}"
                            height="{{ grupoSlots.idTamanyoImgProducto.alto }}">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                {% if grupoSlots.mImgProducto %}
                                    <tr>
                                        <td align="center" class="padding-copy">
                                            <a href="#" target="_blank">
                                                <img id="{{ id~'-imagenProducto' }}" src="" border="0"
                                                     alt="Insert alt text here"
                                                     style="display: block; color: #666666;  font-family: Helvetica, arial, sans-serif; font-size: 16px;"
                                                     class="img-max imagenProducto">
                                            </a>
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if grupoSlots.mTexto %}
                                    <tr>
                                        <td>
                                            <!-- COPY -->
                                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                                <tr>
                                                    <td align="center"
                                                        style="padding: 20px 0 0 0; font-size: 16px; line-height: 25px; font-family: Helvetica, Arial, sans-serif; color: #666666;"
                                                        class="padding-copy">
                                                        <div id="{{ id~'-texto' }}" class="texto">Texto
                                                            cretividad
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                {% endif %}
                            </table>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </td>
    </tr>
</table>