<h4 class="widgettitle">{{ "plantillas"|trans }}</h4>
<table class="table table-bordered responsive">
    <colgroup>
        <col class="con0" style="align: center; width: 4%">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
    </colgroup>
    <thead>
    <tr>
        <th><input type="checkbox" id="checkTodos"/></th>
        <th>{{ "nombre" | trans }}</th>
        <th>{{ "descripcion" | trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% if objPlantillas == null %}
        <tr>
            <td colspan="5">
                {{ "sin.resultados" | trans }}
            </td>
        </tr>
    {% else %}
        {% for objPl in objPlantillas %}
            <tr>
                <td><input class="selTodos" type="checkbox" value="{{ objPl.idPlantilla }}"/></td>
                <td>
                    <a href="{{ path('direct_config_plantillas_editar', {'id_plantilla': objPl.idPlantilla}) }}"
                       style="cursor:pointer;">{{ objPl.nombre }}</a>
                </td>
                <td>{{ objPl.descripcion }}</td>
            </tr>
        {% endfor %}
    {% endif %}
</table>
