{% extends '::pantallaPopUp.html.twig' %}

{% block title %}
    {{ "validar.segmentos" | trans }}
{% endblock %}


{% block body %}
    <form name="form" method="post" id="form" action="{{ path('data_info_validar_segmentos') }}">

        <h4 class="widgettitle">{{ "validar.segmentos" |trans|title }}</h4>

        <div class="widgetbox">
            <div class="widgetcontent">

                <div class="alert alert-danger">
                    <strong>{{ "atencion" |trans|title }}</strong>
                    {{ "mensaje.alerta.validar.segmentos" |trans }}
                </div>

                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody>
                    <tr>
                        <td width="100">
                            <button class="btn btn-success" id="botonAceptar"
                                    onClick="confirmar()">{{ "boton.aceptar" | trans }}</button>
                        </td>
                        <td width="100">
                            <button class="btn btn-danger" id="botonCancelar"
                                    onClick="window.close();">{{ "boton.cancelar" | trans }}</button>
                        </td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </form>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">

        function confirmar() {
            $('#form').submit();
        }
    </script>
    </script>
{% endblock %}