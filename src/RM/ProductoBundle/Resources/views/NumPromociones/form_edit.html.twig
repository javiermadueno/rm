<table id="134" class="table table-bordered responsive" data-index="{{ form.num_promocion|length }}">
    <colgroup>
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
    </colgroup>
    <thead>
    <tr>
        <th>{{ "categoria" |trans|title }}</th>
        <th>{{ "numero.promociones.segmentadas" |trans|title }}</th>
        <th>{{ "numero.promociones.genericas" |trans|title }}</th>
        <th>{{ "controles" |trans|title }}</th>
    </tr>
    </thead>
    <tbody>
    {% for num_pro in form.num_promocion %}
        <tr {% if not num_pro.vars.valid %} class="error" {% endif %}>
            <td class="center-all">
                <div class="control-group {% if not num_pro.idCategoria.vars.valid %} error {% endif %}">
                    <div class="controls">
                        {{ form_widget(num_pro.idCategoria) }}
                        <div>
                             <span class="help-inline">
                                 {% for error in num_pro.idCategoria.vars.errors %}
                                     {{ error.message }} </br>
                                 {% endfor %}
                            </span>
                        </div>
                    </div>
                </div>
            </td>
            <td class="center-all">
                <div class="control-group {% if not num_pro.numSegmentadas.vars.valid %} error {% endif %}">
                    <div class="controls">
                        {{ form_widget(num_pro.numSegmentadas) }}
                        <div><span class="help-inline">
                                {% for error in num_pro.numSegmentadas.vars.errors %}
                                    {{ error.message }} </br>
                                {% endfor %}
                        </span></div>
                    </div>
                </div>
            </td>
            <td class="center-all">
                <div class="control-group {% if not num_pro.numGenericas.vars.valid %} error {% endif %}">
                    <div class="controls">
                        {{ form_widget(num_pro.numGenericas) }}
                        <div><span class="help-inline">
                                {% for error in num_pro.numGenericas.vars.errors %}
                                    {{ error.message }} </br>
                                {% endfor %}
                        </span></div>
                    </div>
                </div>
            </td>
            <td class="center-all">
                <a href="" class="btn btn-danger delRow">{{ "boton.eliminar" |trans|title }}</a>
                {{ form_widget(num_pro.idInstancia) }}
                {{ form_widget(num_pro.idGrupo) }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="center-all">{{ "sin.resultados" |trans|title }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="hidden prototipo" data-prototype="{{
'<tr>
         <td class="center-all">' ~ form_widget(form.num_promocion.vars.prototype.idCategoria) ~'</td>
         <td class="center-all">' ~ form_widget(form.num_promocion.vars.prototype.numSegmentadas) ~'</td>
         <td class="center-all">' ~ form_widget(form.num_promocion.vars.prototype.numGenericas) ~'</td>
         <td class="center-all">
             <a href="" class="btn btn-danger delRow">'~ "boton.eliminar" |trans|title ~ '</a>' ~
form_widget(form.num_promocion.vars.prototype.idInstancia) ~
form_widget(form.num_promocion.vars.prototype.idGrupo) ~
'</td>
    </tr>'
}}"></div>
