      <div class="pageheader">
          <div class="pagetitle">
              <h5>{{ "informacion.avanzada" |trans|title}}</h5>
              <h1>{{ "promocion" |trans|title}}</h1>
          </div>
      </div>
  </div>
{% endblock header %}


