{% extends 'RMComunicacionBundle:Instancia:baseFasesInstancia.html.twig' %}

{% block contenedorPrincipal %}
    {{ parent() }}

    <h4 class="widgettitle">{{ "info" |trans|title }}</h4>

    <div class="mediamgr_head">

        <table class="table responsive">
            <tbody>
            <tr>
                <form name=previewForm id=previewForm
                      action="{{ path('direct_monitor_preview', {'id_instancia': objInstancia.getIdInstancia}) }}"
                      method="post">
                    <input type="hidden" id="preview" name="preview" value="preview">
                    <input type="hidden" id="idSegmento" name="idSegmento" value="preview">
                    <td class="sinborde"> Se han generado {{ random(14000) }} comunicaciones</td>
                    <td class="sinborde pull-right">
                        <button class="btn btn-primary">{{ "boton.previsualizar" | trans }}</button>
                    </td>
                </form>

            </tr>

            </tbody>
        </table>
    </div>

    <h4 class="widgettitle">{{ "opciones.email" |trans|title }}</h4>
    <div class="mediamgr_head">

        <table class="table responsive">
            <tbody>
            <tr>
                <td class="sinborde">
                    {{ "Estado del envio ('Enviado', 'En proceso o 'Programado'): 'En proceso' " | trans }}
                </td>
            </tr>
            <tr>
                <td class="sinborde">
                </td>
            </tr>
            </tbody>
        </table>
    </div>


    <h4 class="widgettitle">{{ "opciones.batch" |trans|title }}</h4>
    <div class="mediamgr_head">
        <table>
            <tbody>
            <tr>
                <td class="sinborde">
                    {# 						Aqu� poner los datos de d�nde los almacenemos#}
                    Formato generado: {{ formato }}
                </td>
            </tr>
            <tr>
                {% if otros == 'FTP' %}
                    <td class="sinborde">
                        El fichero ha sido enviado via {{ otros }} con los siguientes datos: Server {{ server }} |
                        User: {{ user }} | Pass: {{ pass }}
                    </td>
                {% elseif otros == 'POST' %}
                    <td class="sinborde">
                        El fichero ha sido enviado a la siguiente URL: {{ url }}
                    </td>
                {% else %}
                    <td class="sinborde">
                        El fichero ha sido enviado v�a Descarga
                    </td>
                {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}
