{% extends 'RMComunicacionBundle:Instancia:baseFasesInstancia.html.twig' %}

{% block contenedorPrincipal %}
	{{ parent() }}

    <h4 class="widgettitle">{{ "info" |trans|title}}</h4>

		<div class="mediamgr_head">
            <form name=previewForm id=previewForm action="{{ path('direct_monitor_preview', {'id_instancia': objInstancia.getIdInstancia})}}" method="post">
                <input type="hidden" id="preview" name="preview" value="preview">
                <input type="hidden" id="idSegmento" name="idSegmento" value="preview">
			<table class="table responsive">
				<tbody>
					<tr>
                        <td class="sinborde"> {{ 'modulo.direct.fase.finalizada.comunicaciones.generadas'|trans({'%comunicaciones%' : random(14000)}) }}</td>
                        <td class="sinborde pull-right"><button class="btn btn-primary">{{ "boton.previsualizar" | trans }}</button></td>
					</tr>
                <tr>
                    <td class="sinborde">{{ '' }}</td>
                    <td class="sinborde pull-right">
                        <a class="btn btn-success" target="_blank" {{ path('rm_static.default.descargar_batch', {'id': objInstancia.idInstancia}) }}">
                            {{ "boton.descargar.batch" |trans|title}}
                        </a>
                    </td>
                </tr>
				</tbody>
			</table>
            </form>
		</div>

    <h4 class="widgettitle">{{ "opciones.email" |trans|title}}</h4>
		<div class="mediamgr_head">
	
			<table class="table responsive">
				<tbody>
					<tr>
						<td class="sinborde">
							{{ "modulo.direct.fase.finalizada.envio.estado.titlo" | trans }}:  {{ "modulo.direct.fase.finalizada.envio.estado.en.proceso" |trans|title}}
						</td>					
					</tr>
					<tr>
						<td class="sinborde">						
						</td>					
					</tr>
				</tbody>
			</table>
		</div>


    <h4 class="widgettitle">{{ "opciones.batch" |trans|title}}</h4>
		<div class="mediamgr_head">
			<table>
				<tbody>
					<tr>
						<td class="sinborde">
							{{ "modulo.direct.fase.finalizada.formato.generado" |trans|title}}:  {{ formato }}
						</td>					
					</tr>
					<tr>
						{% if otros == 'FTP' %}
						<td class="sinborde">
							{{ "modulo.direct.fase.finalizada.enviado.ftp" |trans({'%via%': otros}) }}: Server {{ server }} | User: {{ user }} | Pass: {{ pass }}
						</td>
						{% elseif otros == 'POST' %}
						<td class="sinborde">
							{{ 'modulo.direct.fase.finalizada.enviado.url'|trans }}: {{ url }}
						</td>
						{% else %}
						<td class="sinborde">
							{{ 'modulo.direct.fase.finalizada.enviado.descarga'|trans }}
						</td>
						{% endif %}					
				</tbody>
			</table>
		</div>

{% endblock %}
