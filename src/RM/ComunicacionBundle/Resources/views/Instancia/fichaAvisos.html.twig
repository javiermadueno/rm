{% extends '::pantallaPopUp.html.twig' %}

{% block title %}
    {{ "Avisos a Category Managers" | trans }}
{% endblock %}

{% block header %}
    <div class="contanier">
        <div class="pageheader">
            <div class="pagetitle">
                <h1>{{ "manager.category" |trans|title }}</h1>
                <h5>{{ "mensaje.error.categorias.numero.promociones.defininido" | trans }} </h5>
            </div>
        </div>
    </div>
{% endblock header %}


{% block body %}
    <div class="maincontentinner">
        <form name="form" id="form" method="POST" action="{{ path("direct_monitor_enviar_avisos") }}">
            <table class="table table-bordered responsive">
                <thead>
                <tr>
                    <th><input type="checkbox" id='{{ 'markAll' }}'
                               value="checked" name='{{ 'markAll' }}' onclick="marcar(this)"></th>
                    <th>{{ "categoria" | trans|title }}</th>
                    <th>{{ "responsable" | trans|title }}</th>
                    <th>{{ "email" | trans|title }}</th>
                    <th>{{ "telefono" | trans|title }}</th>
                </tr>
                </thead>
                <tbody>
                {% set k=0 %}
                {% for user in objUsers %}
                    <tr>
                        <td>{#CHECK#}
                            <input type="checkbox"
                                   id='{{ 'check_'~ k }}'
                                   value="checked"
                                   name='{{ 'check_'~ k }}'>
                        </td>
                        <td>{#CATEGORIA#}
                            <input type="text"
                                   id='{{ 'categoria_'~ k }}'
                                   value="{{ user[0]|default('') }}"
                                   name='{{ 'categoria_'~ k }}'
                                   class="invisibleInput"
                                   readonly="readonly">
                        </td>
                        <td>{#RESPONSABLE#}
                            <input type="text"
                                   id='{{ 'responsable_'~ k }}'
                                   value="{{ user[1] }}"
                                   name='{{ 'responsable_'~ k }}'
                                   class="invisibleInput"
                                   readonly="readonly">
                        </td>
                        <td>{#EMAIL#}
                            <input type="text"
                                   id='{{ 'email_'~ k }}'
                                   value="{{ user[2] }}"
                                   name='{{ 'email_'~ k }}'
                                   class="invisibleInput"
                                   readonly="readonly">
                        </td>
                        <td>{#TELEFONO#}
                            <input type="text"
                                   id='{{ 'telefono_'~ k }}'
                                   value="{{ user[3] }}"
                                   name='{{ 'telefono_'~ k }}'
                                   class="invisibleInput"
                                   readonly="readonly">
                        </td>
                    </tr>
                    {% set k=k+1 %}
                    <input type="hidden" name='counter' value={{ k }}>
                {% endfor %}
                </tbody>
            </table>

            <div class="bloque_contenido sinborde">
                <label for="mensaje_mail"> {{ "enviar.mensaje" | trans }}</label>

                <div class="bloque_contenido sinborde" align="center">
                    <textarea id="mensaje_mail" name="mensaje_mail" rows="6" cols="65"
                              class="input-large notResizableTextArea">
                    </textarea>
                </div>
            </div>

            <table class="margin-center" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                <tr>
                    <td width="100">
                        <button class="btn btn-success" id="botonAceptar"
                                onClick="alert('mensaje.ok.mensajes.enviados'); window.close();">{{ "boton.aceptar" | trans }}</button>
                    </td>
                    <td width="100">
                        <button class="btn btn-danger" id="botonCancelar"
                                onClick="window.close();">{{ "boton.cancelar" | trans }}</button>
                    </td>

                </tr>
                </tbody>
            </table>


        </form>
    </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        function habilitarSoloNumerosConDecimales() {
            $('.soloNum').keydown(function (e) {
                if ((e.keyCode < 48 || e.keyCode > 57) && (e.keyCode < 96 || e.keyCode > 105) && e.keyCode != 8 && e.keyCode != 9 && e.keyCode != 110 && e.keyCode != 190 && e.keyCode != 109 && e.keyCode != 173)
                    e.preventDefault();
            });
        }

        function marcar(source) {
            checkboxes = document.getElementsByTagName('input'); //obtenemos todos los controles del tipo Input
            for (i = 0; i < checkboxes.length; i++) //recoremos todos los controles
            {
                if (checkboxes[i].type == "checkbox") //solo si es un checkbox entramos
                {
                    checkboxes[i].checked = source.checked; //si es un checkbox le damos el valor del checkbox que lo llamï¿½ (Marcar/Desmarcar Todos)
                }
            }
        }
    </script>
{% endblock %}