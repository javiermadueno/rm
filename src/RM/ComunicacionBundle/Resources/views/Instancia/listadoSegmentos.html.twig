<div class="bloque_contenido">
	<div class="cabecera_contenido">
		<span>{{ "Segmentos" | trans }}</span> 
	</div>

	<form id="formSegment" name="formSegment" method="post" action="{{ path('direct_advanced_segmentator' ) }}">
		<input type="hidden" id="selectedSegment" name="selectedSegment" value="{{ selectedSegment }}">
		<input type="hidden" id="id_instancia" name="id_instancia" value="{{ id_instancia }}">
		<input type="hidden" id="check" name="check" value="{{ check }}">
		<input type="hidden" id="origen" name="origen" value="searchSegments">
		<input type="hidden" id="row" name="row" value="{{ row }}">
		<div class="linea_contenido">
			<table id="tablaSegmentos" name="tablaSegmentos">
				<thead>
				<tr>
					<th>{{ "" | trans }}</th>
					<th>{{ "Segmento" | trans }}</th>
					<th>{{ "Categoria" | trans }}</th>
					<th>{{ "Marca" | trans }}</th>
					<th>{{ "Proveedor" | trans }}</th>
				</tr>
				</thead>
				<tbody>
				{% if objSegmentos == null %}
					<tr>
						<td colspan="30">
							{{ "Sin resultados" | trans }}
						</td>
					</tr>
				{% endif %}
			</table>
			<div class="navigation wrapper">
			</div>
		</div>
	</form>
</div>