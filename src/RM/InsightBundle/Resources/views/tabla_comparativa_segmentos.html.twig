
<table class="table responsive table-bordered">
    <colgroup>
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
        <col class="con0">
        <col class="con1">
    </colgroup>
    <tr>
        <th></th>
        <th></th>
        <th>{{ "segmentos" |trans|title}}</th>
        <th colspan="2">{{ "numero.clientes" |trans|title}}</th>
        <th colspan="2">{{ "media.ventas" |trans|title}}</th>
        <th colspan="2">{{ "frecuencia.media" |trans|title}}</th>
        <th colspan="2">{{ "ticket.medio" |trans|title}}</th>
        <th colspan="2">{{ "recencia.media" |trans|title}}</th>
        <th colspan="2">{{ "amplitud.media" |trans|title}}</th>
    </tr>
    <tbody>
    {% for nombre_segmento1, nombres_segmentos in datos %}
        {% for nombre_segmento2, data in nombres_segmentos if data|length == 2 %}
            <!-- Mes1 -->
            <tr>
                {% if loop.first %}
                    <td rowspan="{{ nombres_segmentos|length * 2 }}">{{ nombre_segmento1 }}</td>
                    <td rowspan="{{ nombres_segmentos|length * 2 }}">

                        {% if nombre_segmento1|lower == "estado_nuevo" %}
                            <a class="modificaRuta" href="{{ path("rm_insight_cliente_new") }}">
                                <img style="float:center; display: inline-block;" class="info"
                                     src="{{ asset('img/icono_info.png') }}"
                                     alt="{{ 'nuevos' | trans }}" title="{{ 'nuevos' | trans }}"/>
                            </a>
                        {% elseif nombre_segmento1|lower == "estado_activo" %}
                            <a class="modificaRuta" href="{{ path("rm_insight_cliente_activo") }}">
                                <img style="float:center; display: inline-block;" class="info"
                                     src="{{ asset('img/icono_info.png') }}"
                                     alt="{{ 'activos' | trans }}" title="{{ 'activos' | trans }}"/>
                            </a>
                        {% elseif nombre_segmento1|lower == "estado_inactivo" %}
                            <a class="modificaRuta" href="{{ path('rm_insight_cliente_inactivo') }}">
                                <img style="float:center; display: inline-block;" class="info"
                                     src="{{ asset('img/icono_info.png') }}"
                                     alt="{{ 'inactivos' | trans }}"
                                     title="{{ 'inactivos' | trans }}"/>
                            </a>
                        {% endif %}
                    </td>
                {% endif %}
                <td rowspan="2">{{ nombre_segmento2 }}</td>
                <td>{{ data[mes1]['num_cli']|number_format(0, '.') }}</td>
                <td rowspan="2">{{ porcentaje.diferencia(data[mes1]['num_cli'], data[mes2]['num_cli']) }}</td>
                <td>{{ data[mes1]['compra_med']|number_format(2, '.', ',') }}</td>
                <td rowspan="2">{{ porcentaje.diferencia(data[mes1]['compra_med'], data[mes2]['compra_med']) }}</td>
                <td>{{ data[mes1]['frec_med']|number_format(2, '.', ',') }}</td>
                <td rowspan="2">{{ porcentaje.diferencia(data[mes1]['frec_med'], data[mes2]['frec_med']) }}</td>
                <td>{{ data[mes1]['tick_med']|number_format(2, '.', ',') }}</td>
                <td rowspan="2">{{ porcentaje.diferencia(data[mes1]['tick_med'], data[mes2]['tick_med']) }}</td>
                <td>{{ data[mes1]['rec_med']|number_format(2, '.', ',') }}</td>
                <td rowspan="2">{{ porcentaje.diferencia(data[mes1]['rec_med'], data[mes2]['rec_med']) }}</td>
                <td>{{ data[mes1]['a1_med']|number_format(2, '.', ',') }}</td>
                <td rowspan="2">{{ porcentaje.diferencia(data[mes1]['a1_med'], data[mes2]['a1_med']) }}</td>
            </tr>
            <!-- Mes2 -->
            <tr>
                <td>{{ data[mes2]['num_cli']|number_format(0, '.') }}</td>
                <td>{{ data[mes2]['compra_med']|number_format(2, '.', ',') }}</td>
                <td>{{ data[mes2]['frec_med']|number_format(2, '.', ',') }}</td>
                <td>{{ data[mes2]['tick_med']|number_format(2, '.', ',') }}</td>
                <td>{{ data[mes2]['rec_med']|number_format(2, '.', ',') }}</td>
                <td>{{ data[mes2]['a1_med']|number_format(2, '.', ',') }}</td>
            </tr>
        {% else %}
            {% for nombre_segmento2, data in nombres_segmentos %}
                <!-- Mes1 -->
                <tr>
                    {% if loop.first %}
                        <td rowspan="{{ nombres_segmentos|length * 2 }}">{{ nombre_segmento1 }}</td>
                        <td rowspan="{{ nombres_segmentos|length * 2 }}">

                            {% if nombre_segmento1|lower == "estado_nuevo" %}
                                <a class="modificaRuta" href="{{ path("rm_insight_cliente_new") }}">
                                    <img style="float:center; display: inline-block;" class="info"
                                         src="{{ asset('img/icono_info.png') }}"
                                         alt="{{ 'nuevos' | trans }}" title="{{ 'nuevos' | trans }}"/>
                                </a>
                            {% elseif nombre_segmento1|lower == "estado_activo" %}
                                <a class="modificaRuta" href="{{ path("rm_insight_cliente_activo") }}">
                                    <img style="float:center; display: inline-block;" class="info"
                                         src="{{ asset('img/icono_info.png') }}"
                                         alt="{{ 'activos' | trans }}" title="{{ 'activos' | trans }}"/>
                                </a>
                            {% elseif nombre_segmento1|lower == "estado_inactivo" %}
                                <a  href="#">
                                    <img style="float:center; display: inline-block;" class="info"
                                         src="{{ asset('img/icono_info.png') }}"
                                         alt="{{ 'inactivos' | trans }}"
                                         title="{{ 'inactivos' | trans }}"/>
                                </a>
                            {% endif %}
                        </td>
                    {% endif %}
                    <td rowspan="2">{{ nombre_segmento2 }}</td>
                    <td>-</td>
                    <td rowspan="2">{{ 0.00|porcentaje }}</td>
                    <td>-</td>
                    <td rowspan="2">{{ 0.00|porcentaje }}</td>
                    <td>-</td>
                    <td rowspan="2">{{ 0.00|porcentaje }}</td>
                    <td>-</td>
                    <td rowspan="2">{{ 0.00|porcentaje }}</td>
                    <td>-</td>
                    <td rowspan="2">{{ 0.00|porcentaje }}</td>
                    <td>-</td>
                    <td rowspan="2">{{ 0.00|porcentaje }}</td>
                </tr>
                <!-- Mes2 -->
                <tr>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            {% endfor %}
        {% endfor %}
    {% endfor %}
    </tbody>
</table>

<script type="text/javascript">
    $(document).on('ready', function(){
        $('.modificaRuta').on('click', function(e){
            e.preventDefault();
            var $form = $('form');
            $form.attr('action', $(this).attr('href'));
            $form.submit();
        });
    });
</script>