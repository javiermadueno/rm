{% extends ':insight:base_insight.html.twig' %}


{% set idOpcionMenuSup = 4 %}
{% set idOpcionMenuIzq = 1 %}

{% block title %}
{{ "activos" |trans|title}}
{% endblock %}



{% block migas %}
	<li><a href="{{ path('rm_insight_homepage') }}"> <span class="iconfa-home"></span></a> <span class="separator"></span></li>
    <li>{{ "menu.insight.clientes" |trans|title}} <span class="separator"></span></li>
    <li>{{ "activos" |trans|title}}</li>
{% endblock %}

{% block pagetitle %}
  <h5>{{ "menu.insight.clientes" |trans|title}}</h5>
    <h1>{{ "activos" |trans|title}}</h1>
{% endblock pagetitle %}

{% set fecha_mes1 = date(mes1)|date('M-Y') %}
{% set fecha_mes2 = date(mes2)|date('M-Y') %}

{% block contenedorPrincipal %}
    {{ parent() }}
    <h4 class="widgettitle">{{ "activos" |trans|title}}</h4>
    <div class="mediamgr_head">
        <div class="row-fluid">
            <div class="span12">
                {% include '@RMInsight/tabla_comparaiva_segmentos_expandida.html.twig' with {'datos' : datos} %}
            </div>
        </div>
    </div>

    <h4 class="widgettitle">{{ "graficos" |trans|title}}</h4>
    <div class="widgetcontent">
        <div class="row-fluid">
            <div class="span12">
                <div id="graficoRiesgos"></div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div id="graficoEvolucionActivos"></div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
	<script type="text/javascript">
        {{ chart(graficoRiesgos) }}
        {{ chart(graficaEvolucion) }}
	</script>
{% endblock %}
