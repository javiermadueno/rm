              <th style="text-align: center;">{% trans %}Slots{% endtrans %}</th>
              <th style="text-align: center;">{% trans %}Ventas{% endtrans %}</th>
          </tr>
        </thead>
        <tbody>
        {% for d in data %}
            <tr>
                <td style="text-align: center;" width="9%">
                    {{ d[0] }}
                </td>
                <td style="text-align: center;" width="9%">
                    {{ d[1] }}
                </td>
                <td style="text-align: center;" width="9%">
                    {{ d[2] }}
                </td>
                <td style="text-align: center;" width="9%">
