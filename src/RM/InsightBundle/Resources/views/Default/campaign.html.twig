                <td style="text-align: center;" width="9%">
                    {{ d[8] }}
                </td>
                <td style="text-align: center;" width="9%">
                    {{ d[9] }}
                </td>
                <td style="text-align: center;" width="9%">
                    {{ d[9] }}{% trans %}&euro;{% endtrans %}
                </td>
            </tr>
        {% endfor %}
